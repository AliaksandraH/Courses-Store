<h2>Edit the {{course.title}} course</h2>
<form action="/courses/edit" method="post" class="course-form">
    <div class="input-field">
        <input
            id="title"
            name="title"
            type="text"
            class="validate"
            required
            value="{{course.title}}"
        />
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter a name"></span>
    </div>
    <div class="input-field">
        <input
            id="price"
            name="price"
            type="number"
            class="validate"
            required
            min="1"
            value="{{course.price}}"
        />
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>
    <div class="input-field">
        <input
            id="img"
            name="img"
            type="text"
            class="validate"
            required
            value="{{course.img}}"
        />
        <label for="img">URL Course icon</label>
        <span
            class="helper-text"
            data-error="Enter the URL of the image"
        ></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}" />

    <button type="submit" class="btn btn-primary">Change</button>
</form>
<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course.id}}" />
    <button type="submit" class="btn red">Delete</button>
</form>