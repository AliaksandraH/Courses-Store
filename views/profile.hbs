<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
            <img
                class="avatar"
                src="/{{user.avatarUrl}}"
                alt="avatar-{{user.name}}"
            />
        {{else}}
            <p>There is no user image</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input
                    id="name"
                    name="name"
                    type="text"
                    class="validate"
                    required
                    value="{{user.name}}"
                />
                <label for="name">Name</label>
                <span class="helper-text" data-error="Enter a name"></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Image</span>
                    <input type="file" name="avatar" />
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text" />
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}" />
            <button type="submit" class="btn btn-primary">Ð¡hange</button>
        </form>
    </div>
</div>